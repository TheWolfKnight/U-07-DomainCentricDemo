@page
@using DomainCentricDemo.Application.Dto
@model DomainCentricDemo.WebApp.Pages.Book.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<table class="row">
	<table class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Book.Id" />
			<input type="hidden" asp-for="Book.RowVersion" />
			<div class="form-group">
				<label asp-for="Book.Title" class="control-label"></label>
				<input asp-for="Book.Title" class="form-control" />
				<span asp-validation-for="Book.Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Book.Description" class="control-label"></label>
				<input asp-for="Book.Description" class="form-control" />
				<span asp-validation-for="Book.Description" class="text-danger"></span>
			</div>
			<table class="table">
				<label asp-for="Book.Authors" class="control-label"></label>
				@foreach (var author in Model.Book.Authors!)
				{
					<tr>
					<td>@author.FirstName @author.SirName</td>
						<td>
							<a asp-page="./Edit" asp-route-id="@author.Id">Edit</a> |
							<a asp-page="./Delete" asp-route-id="@author.Id">Delete</a>
						</td>
					</tr>
				}
				<td>
				<td>
					<a asp-page="./Add">Add author</a>
				</td>
				</td>
				<span asp-validation-for="Book.Authors" class="text-danger"></span>
			</table>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</table>
</table>


<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
