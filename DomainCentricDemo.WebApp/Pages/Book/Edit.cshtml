@page
@using DomainCentricDemo.Application.Dto
@model DomainCentricDemo.WebApp.Pages.Book.EditModel

@{
    ViewData["Title"] = "Edit";
}
<head>
	<link rel="stylesheet" href="~/css/site.css" />
</head>


<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
	<table class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Book.Id" />
			<input type="hidden" asp-for="Book.RowVersion" />
			<div class="form-group">
				<label asp-for="Book.Title" class="control-label"></label>
				<input asp-for="Book.Title" class="form-control" />
				<span asp-validation-for="Book.Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Book.Description" class="control-label"></label>
				<input asp-for="Book.Description" class="form-control" />
				<span asp-validation-for="Book.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Book.Authors" class="control-label"></label>
				<table class="table author-table" style="border-radius: 10px;">
					<tr>
						<th>Author Name</th>
						<th>Action</th>
					</tr>
					@foreach (AuthorDto author in Model.Book.Authors!)
					{
						<tr>
							<td>@author.FirstName @author.SirName</td>
							<td>
								<a asp-page="./Delete" asp-route-id="@author.Id">Delete</a>
							</td>
						</tr>
					}
					<tr>
						<td></td>
						<td>
							<a asp-page="../Author/Create">Add author</a>
						</td>
					</tr>
				</table>
				<span asp-validation-for="Book.Authors" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
				<a asp-page="./Index" class="btn btn-danger">Back to List</a>
			</div>
		</form>
	</table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
